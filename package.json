{
  "name": "claude-slack-hook",
  "version": "2.0.0",
  "description": "Claude Code hook integration with Slack for approval workflow (pure TypeScript, no shell script)",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "compile": "bun build --production --compile ./src/index.ts --outfile ./dist/bin/claude-slack-hook",
    "stop": "pkill -f 'claude-slack-hook' 2>/dev/null || true"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/pino": "^7.0.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}