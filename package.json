{
  "name": "claude-slack-hook",
  "version": "1.0.0",
  "description": "Claude Code hook integration with Slack for approval workflow",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "compile": "bun build --production --compile ./src/index.ts --outfile ./dist/bin/claude-slack-hook",
    "execute": "./dist/bin/claude-slack-hook",
    "stop": "lsof -ti:${APPROVAL_PORT:-4698} | xargs kill 2>/dev/null || true"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "express": "^4.22.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.3",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}